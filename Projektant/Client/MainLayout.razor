@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />


<MudLayout>
    <MudAppBar Elevation="1" >

        <MudIconButton Icon="@Icons.Material.Filled.Menu" Style="@($"color:{Colors.Purple.Accent3};")" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h5" Class="d-flex flex-row-reverse flex-grow-1 gap-4" Style="@($"color:{Colors.Purple.Accent2};")" font-size="31">Zarzadzanie smiecami</MudText>
        <MudSpacer />
    </MudAppBar>
        <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2" cursor-crosshair>
            @*NavMenu*@
            <MudThemeProvider @bind-IsDarkMode="@_isDarkMode" Theme="_theme" />
            <MudSwitch @bind-Checked="@_isDarkMode" Color="Color.Primary" Class="ma-4" T="bool" Label="Toggle Light/Dark Mode" />
            @code {
            private MudTheme _theme = new();
            private bool _isDarkMode;
            }
        </MudDrawer>
    <MudMainContent>
        @*Body*@
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = false;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}

<MudContainer Class="mt-16 px-8" MaxWidth="MaxWidth.False">
    <MudGrid>
        <MudItem xs="12" sm="6" md="4">
            <MudPaper Elevation="2" Class="d-inline-flex gap-4 pa-4" Style="height: 150px; width:250px;"></MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudPaper Elevation="2" Class="d-inline-flex gap-4  pa-4" Style="height: 150px; width:250px;"></MudPaper>
        </MudItem>
        <MudItem xs="12" sm="12" md="4">
            <MudPaper Elevation="2" Class="d-inline-flex  gap-4  pa-4" Style="height: 150px; width:250px;"></MudPaper>
        </MudItem>
        <MudItem xs="12" sm="12" md="4">
            <MudPaper Elevation="2" Class="d-inline-flex gap-4  pa-4" Style="height: 150px; width:250px;"></MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>
